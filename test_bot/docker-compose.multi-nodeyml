version: "3"

services:
  bot:
    depends_on:
      - lavalink
    build: .
    volumes:
      - ./logs:/bot/logs
      - ../mafic:/bot/mafic
    environment:
      TOKEN: $TOKEN
      GW_PROXY: ws://127.0.0.1:7878
      LAVALINK_FILE: lavalink/multi-nodes.json
    network_mode: host
  lavalink:
    build: lavalink
    volumes:
      - ./logs/lava:/opt/Lavalink/logs
    deploy:
      replicas: 8
    ports:
      - "6962-6969:6969"
  gateway-proxy:
    image: gelbpunkt/gateway-proxy:x86-64
    volumes:
      - ./gateway-proxy/noshard.config.json:/config.json
    environment:
      TOKEN: $TOKEN
    network_mode: host
